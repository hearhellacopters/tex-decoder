{
  "compilerOptions": {
    "target": "es2020",
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "allowSyntheticDefaultImports":true,
    "types": ["node", "mocha"],
    "esModuleInterop": true,
    "outDir": "lib/"
  },
  "files": [
    "src/index.ts"
  ],
  "compileOnSave": false
}