{
  "compilerOptions": {
    "target": "es2020",
    "declaration": true,
    "moduleResolution": "node",
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "allowSyntheticDefaultImports":true,
    "types": ["node"],
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "importHelpers": true,
    "outDir": "lib/"
  },
  "include": [
    "src/*"
  ],
  "compileOnSave": false
}